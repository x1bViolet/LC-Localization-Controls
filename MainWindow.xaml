						<Grid>

							<Grid.Resources>
								<Style TargetType="{x:Type Separator}">
									<Setter Property="Margin" Value="7" />
									<Setter Property="Background" Value="{DynamicResource General:Separators}" />
								</Style>

								<Style TargetType="{x:Type TextBlock}">
									<Setter Property="FontFamily" Value="Fonts\#Linotype Syntax Com" />
									<Setter Property="Foreground" Value="{DynamicResource General:DefaultTextColor}" />
									<Setter Property="VerticalAlignment" Value="Center" />
									<Setter Property="FontSize" Value="18" />
									<Setter Property="Margin" Value="0 0 2 0" />
									<Setter Property="TextWrapping" Value="Wrap" />
								</Style>

								<Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="{x:Type T:HintTextBlock}">
									<Setter Property="FontSize" Value="13" />
									<Setter Property="Foreground" Value="#aa9a9a" />
									<Setter Property="Visibility" Value="Collapsed" />
								</Style>

								<Style x:Key="ConfirmButton" TargetType="{x:Type Button}">
									<Setter Property="Content" Value="" />
									<Setter Property="FontFamily" Value="Fonts\#Segoe Fluent Icons" />
								</Style>

								<Style TargetType="{x:Type CheckBox}">
									<Setter Property="Background" Value="#26252D" />
									<Setter Property="BorderBrush" Value="#34333D" />
									<Setter Property="BorderThickness" Value="2" />
									<Setter Property="HorizontalAlignment" Value="Left" />
									<Setter Property="Width" Value="30" />
									<Setter Property="Height" Value="30" />
									<Setter Property="Template">
										<Setter.Value>
											<ControlTemplate TargetType="{x:Type CheckBox}">
												<Grid x:Name="templateRoot" Background="Transparent" SnapsToDevicePixels="True">
													<Grid.ColumnDefinitions>
														<ColumnDefinition Width="Auto" />
