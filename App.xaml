<Application x:Class="Translation_Devouring_Siltcurrent.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:Translation_Devouring_Siltcurrent" StartupUri="MainWindow.xaml">
	<Application.Resources>
		<Style x:Key="Base:TitleBar.Button" TargetType="{x:Type Button}">
			<Setter Property="Width" Value="32" />
			<Setter Property="Height" Value="32" />
			<Setter Property="IsDefault" Value="True" />
			<Setter Property="Foreground" Value="#9D9D9D" />
			<Setter Property="FontFamily" Value="Fonts\#Segoe Fluent Icons" />
			<Setter Property="FontSize" Value="20" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Grid Background="Transparent">
							<Border x:Name="MainBorder" CornerRadius="4">
								<ContentPresenter Margin="{TemplateBinding Padding}" HorizontalAlignment="Center" VerticalAlignment="Center" />
							</Border>
						</Grid>
						<ControlTemplate.Triggers>

							<MultiTrigger>
								<MultiTrigger.Conditions>
									<Condition Property="IsMouseOver" Value="True" />
									<Condition Property="IsDefault" Value="True" />
								</MultiTrigger.Conditions>
								<Setter TargetName="MainBorder" Property="Background" Value="#282A37" />
								<!--    Minimize/Reload config buttons gray highlight if IsDefault set to True    -->
							</MultiTrigger>

							<MultiTrigger>
								<MultiTrigger.Conditions>
									<Condition Property="IsMouseOver" Value="True" />
									<Condition Property="IsDefault" Value="False" />
								</MultiTrigger.Conditions>
								<Setter TargetName="MainBorder" Property="Background" Value="#A52C42" />
								<!--    Close button red higlight if IsDefault set to False    -->
							</MultiTrigger>

						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Application.Resources>
</Application>
